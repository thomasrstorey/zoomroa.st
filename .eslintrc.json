{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "next"
    ],
    "plugins": [
        "react",
        "@typescript-eslint",
        "@next/eslint-plugin-next"
    ],
    "rules": {
        "@typescript-eslint/indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "@next/next/no-img-element": "off"
    }
}
